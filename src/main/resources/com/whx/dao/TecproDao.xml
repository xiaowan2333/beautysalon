<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whx.dao.TecproDao">

    <resultMap type="com.whx.entity.Tecpro" id="TecproMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tecid" column="tecid" jdbcType="INTEGER"/>
        <result property="proid" column="proid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TecproMap">
        select
          id, tecid, proid
        from tecpro
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TecproMap">
        select
          id, tecid, proid
        from tecpro
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tecid != null">
                and tecid = #{tecid}
            </if>
            <if test="proid != null">
                and proid = #{proid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from tecpro
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tecid != null">
                and tecid = #{tecid}
            </if>
            <if test="proid != null">
                and proid = #{proid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into tecpro(tecid, proid)
        values (#{tecid}, #{proid})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tecpro(tecid, proid)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.tecid}, #{entity.proid})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into tecpro(tecid, proid)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.tecid}, #{entity.proid})
        </foreach>
        on duplicate key update
        tecid = values(tecid),
        proid = values(proid)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update tecpro
        <set>
            <if test="tecid != null">
                tecid = #{tecid},
            </if>
            <if test="proid != null">
                proid = #{proid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from tecpro where id = #{id}
    </delete>

</mapper>

